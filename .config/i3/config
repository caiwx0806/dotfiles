set $mod Mod4
set $mod1 Mod1

set $left_key  Left
set $down_key  Down
set $up_key    Up
set $right_key Right

set $window_border 2
set $scratchpad_border 4
set $scratchpad_size 960 540

# No. of pixels to grow/shrink the gaps with each keypress
set $gaps_resize 4
# Percentage to raise/lower the volume with each keypress
set $volume_change 5

set $mpd ncmpcpp

#
#  /\  _  _ | . _ _ _|_. _  _  _
